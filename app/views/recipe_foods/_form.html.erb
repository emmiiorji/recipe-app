          <option value=<%= food.id %>><%= food.name %></option>
        <% end %>
      </select>
    </div>
  
    <div>
      <%= form.label :quantity, style: "display: block" %>
      <%= form.number_field :quantity %>
    </div>

    <div class="field form-group  p-2">
    <%= form.number_field :recipe_id, id: :recipe_id, class: "form-control", value: current_user.id %>
    </div> 
  
    <div>
      <%= form.submit %>
    </div>
  <% end %>
  