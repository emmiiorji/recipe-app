<p style="color: green"><%= notice %></p>

<div class="d-flex justify-content-between p-2">
<h2>FOOD LIST</h2>
<%= link_to 'Add Food', new_food_path, class:"btn btn-success btn-lg" %>
</div>

<table class="table">
  <thead class="table-dark">
    <tr>
      <th>Name</th>
      <th>Measurement unit</th>
      <th>Price</th>
      <th>Quantity</th>
      <th colspan="3"></th>
    <tr>
  </thead>
  <tbody>
    <tr>
      <td> </td>
      <td> </td>
      <td> </td>
      <td> </td>
      <td> </td>
    <tr>
  </tbody>

</table>

<%= link_to 'Add New Food', new_food_path, class:"btn btn-primary" %>

<div id="foods">
  <% @foods.each do |food| %>
    <%= render food %>
    <%= link_to "Show this food", food %>
  <% end %>
</div>

