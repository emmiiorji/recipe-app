<section id="public-recipes-list">
  <%= link_to "Back to recipe", :back %>
  <h1> Shopping List </h1>

  <div>
    <p>Amount of food items to buy: <%= @new_ingredients_data.length %></p>
    <p>Total value needed: <%= @new_ingredients_total_price %></p>
  </div>

  <% if @new_ingredients_data.empty?%>
    <p>You have all the ingredients necessary to do all your recipes!</p>
  <% else %>
  <table class="table table-striped table-bordered table-hover">
  <thead class="table-secondary">
    <tr>
      <th><table class="table table-striped table-bordered table-hover">
      <thead class="table-dark">
        <tr>
          <th>Name</th>
          <th>Quantity unit</th>
          <th>Price</th>
        <tr>
      </thead>
      <tbody>
      <% @new_ingredients_data.each do |ingredient| %>
        <tr>
          <td> <%= ingredient[:name] %> </td>
          <td> <%= ingredient[:quantity] %> </td>
          <td> <%= ingredient[:price] %> </td>
        </tr>
        <% end %>
      </tbody>
    </table>
  <% end %>
</section>


